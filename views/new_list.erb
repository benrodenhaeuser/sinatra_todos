<form method="post" action="/lists">
  <dl>
    <dt>
      <label for="list_name">Enter the name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" value="<%= @todo_name %>" type="text" />
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save" />
    <a href="/lists">Cancel</a>
  </fieldset>
</form>
